{
  "name": "airseeker",
  "license": "MIT",
  "version": "1.0.0",
  "description": "A tool to update a beacons with signed responses from Airnode's gateway",
  "main": "./dist/src/index.js",
  "files": [
    "dist",
    "airseeker-service.config.js"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./dist *.tgz",
    "compile": "tsc -p tsconfig.json",
    "dev:api": "ts-node test/server/server.ts",
    "dev:eth-node": "hardhat node",
    "dev:testing-services:start": "pm2 start testing-services.config.js",
    "dev:testing-services:stop": "pm2 delete testing-services.config.js",
    "docker:build": "docker build -t api3/airseeker:latest -f docker/Dockerfile .",
    "docker:run": "docker run --rm --volume \"$(pwd)/config:/app/config\" --env-file $(pwd)/config/secrets-docker.env api3/airseeker:latest",
    "format": "yarn prettier",
    "format:fix": "yarn prettier:fix",
    "lint": "yarn format && yarn eslint && yarn terraform:fmt:check",
    "lint:fix": "yarn format:fix && yarn eslint:fix && yarn terraform:fmt:write",
    "eslint": "eslint . --ext .js,.ts",
    "eslint:fix": "eslint . --ext .js,.ts --fix",
    "postinstall": "husky install",
    "pm2:logs": "pm2 logs",
    "pm2:start": "scripts/run-locally.sh pm2 start airseeker-service.config.js",
    "pm2:status": "pm2 status",
    "pm2:stop": "pm2 delete airseeker-service.config.js",
    "prettier": "prettier --check \"./**/*.{js,ts,md,yml,json}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,ts,md,yml,json}\" --ignore-unknown",
    "start": "scripts/run-locally.sh ts-node src/index.ts",
    "terraform:fmt:check": "ts-node scripts/terraform-fmt check",
    "terraform:fmt:write": "ts-node scripts/terraform-fmt write",
    "test": "jest --selectProjects unit",
    "test:e2e": "SILENCE_LOGGER=true jest --selectProjects e2e --runInBand"
  },
  "dependencies": {
    "@api3/airnode-abi": "^0.6.0",
    "@api3/airnode-node": "^0.5.0",
    "@api3/airnode-protocol-v1": "^0.2.0",
    "@api3/airnode-utilities": "^0.6.1",
    "@api3/airnode-validator": "^0.5.0",
    "@api3/promise-utils": "^0.3.0",
    "axios": "^0.27.1",
    "ethers": "^5.6.3",
    "lodash": "^4.17.21",
    "promise.any": "^2.0.4",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.27",
    "@types/promise.any": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "express": "^4.18.0",
    "hardhat": "^2.9.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}

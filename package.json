{
  "name": "@api3/airseeker",
  "license": "MIT",
  "version": "0.2.0",
  "description": "A tool to update beacons with signed responses from remote Airnode gateways",
  "main": "./dist/index.js",
  "types": "./dist/validation",
  "repository": {
    "type": "git",
    "url": "https://github.com/api3dao/airseeker.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "airseeker-service.config.js"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf *.tsbuildinfo ./dist *.tgz",
    "compile": "tsc --build tsconfig.json",
    "dev:api": "ts-node test/server/server.ts",
    "dev:eth-node": "hardhat node",
    "dev:testing-services:start": "pm2 start testing-services.config.js",
    "dev:testing-services:stop": "pm2 delete testing-services.config.js",
    "docker:build": "docker build -t api3/airseeker:latest -f docker/Dockerfile .",
    "docker:run": "docker run --rm --volume \"$(pwd)/config:/app/config\" --env-file $(pwd)/config/secrets.env api3/airseeker:latest",
    "format": "yarn prettier",
    "format:fix": "yarn prettier:fix",
    "lint": "yarn format && yarn eslint && yarn terraform:fmt:check",
    "lint:fix": "yarn format:fix && yarn eslint:fix && yarn terraform:fmt:write",
    "eslint": "eslint . --ext .js,.ts",
    "eslint:fix": "eslint . --ext .js,.ts --fix",
    "postinstall": "husky install",
    "pm2:logs": "pm2 logs",
    "pm2:start": "ts-node -T scripts/run-locally.ts pm2 start airseeker-service.config.js",
    "pm2:status": "pm2 status",
    "pm2:stop": "pm2 delete airseeker-service.config.js",
    "prettier": "prettier --check \"./**/*.{js,ts,md,yml,json}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,ts,md,yml,json}\" --ignore-unknown",
    "start": "ts-node -T scripts/run-locally.ts ts-node src/index.ts",
    "terraform:fmt:check": "ts-node scripts/terraform-fmt check",
    "terraform:fmt:write": "ts-node scripts/terraform-fmt write",
    "test": "SILENCE_LOGGER=true jest --selectProjects unit",
    "test:e2e": "SILENCE_LOGGER=true jest --selectProjects e2e --runInBand"
  },
  "dependencies": {
    "@api3/airnode-abi": "^0.6.2",
    "@api3/airnode-node": "^0.6.2",
    "@api3/airnode-protocol-v1": "^0.5.0",
    "@api3/airnode-utilities": "^0.6.2",
    "@api3/airnode-validator": "^0.6.2",
    "@api3/promise-utils": "^0.3.0",
    "axios": "^0.27.2",
    "ethers": "^5.6.3",
    "lodash": "^4.17.21",
    "promise.any": "^2.0.4",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/promise.any": "^2.0.0",
    "@types/serverless": "^3.12.7",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.14.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "express": "^4.18.1",
    "hardhat": "^2.9.9",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "pm2": "^5.2.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "serverless": "^3.18.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.4"
  }
}

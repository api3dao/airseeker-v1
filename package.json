{
  "name": "airseeker",
  "license": "MIT",
  "version": "1.0.0",
  "description": "A tool to update a beacons with signed responses from Airnode's gateway",
  "main": "./dist/src/main.js",
  "files": [
    "dist",
    "ecosystem.config.js"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./dist *.tgz",
    "compile": "tsc -p tsconfig.json",
    "docker:build": "docker build -t api3/airseeker:latest -f docker/Dockerfile .",
    "format": "yarn prettier",
    "format:fix": "yarn prettier:fix",
    "lint": "yarn format && yarn eslint",
    "lint:fix": "yarn format:fix && yarn eslint:fix",
    "eslint": "eslint . --ext .js,.ts",
    "eslint:fix": "eslint . --ext .js,.ts --fix",
    "postinstall": "husky install",
    "pm2:logs": "pm2 logs",
    "pm2:start": "scripts/run-locally.sh pm2 start ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:stop": "pm2 delete ecosystem.config.js",
    "prettier": "prettier --check \"./**/*.{js,ts,md,yml,json}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,ts,md,yml,json}\" --ignore-unknown",
    "start": "scripts/run-locally.sh ts-node src/main.ts",
    "test": "jest"
  },
  "dependencies": {
    "@api3/promise-utils": "^0.2.0",
    "lodash": "^4.17.21",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
